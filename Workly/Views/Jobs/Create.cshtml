@model Workly.Models.Job

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Jobs"))
{
    <form>
        @Html.ValidationSummary(true, "Please complete the required fields")
        <div class="form-group">
            @Html.LabelFor(m => m.Work)
            @Html.TextBoxFor(m => m.Work, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Work)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Field)
            @Html.TextBoxFor(m => m.Field, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Field)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Start)  
            @Html.TextBoxFor(m => m.Start, new { @class = "datefield", @type = "date" }) 
            @Html.ValidationMessageFor(m => m.Start)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Locality)
            @Html.TextBoxFor(m => m.Locality, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Locality)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Salary)
            @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Salary)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Duration)
            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Duration)
        </div>
        @Html.AntiForgeryToken()
        <div>
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </form>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
</script>